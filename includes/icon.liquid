<!-- Shared Icon Section -->
{% assign iconIcon = include.icon | default: icon | default: 'close' %}
{% assign iconColor = include.color | default: color | default: 'currentColor' %}
{% assign iconDirection = include.direction | default: direction | default: 'right' %}
{% assign iconSize = include.size | default: size %}
{% assign iconCircle = include.circle | default: circle %}
{% assign iconHover = include.hover | default: hover %}
{% assign iconPadding = include.padding | default: padding | default: 6 %}

{% capture rotation %}
  {% if iconDirection == 'left' %}180deg{% else %}0deg{% endif %}
{% endcapture %}

{% capture size %}
  {% if iconSize == 'small' %}18px{% elsif iconSize == 'large' %}48px{% else %}28px{% endif %}
{% endcapture %}

<span class="icon icon--{{ iconDirection }} {% if iconCircle %}icon--circle{% endif %} {% if iconHover %}icon--hover{% endif %}" style="--color-icon: {{ iconColor }}; --icon-rotation: {{ rotation }}">
  {% if iconIcon == 'close' %}
    {% assign iconCloseSize = 48 %}
    {% assign iconCloseOuterPos = iconCloseSize | minus: iconPadding %}
    <svg style="stroke: {{ iconColor }}; transform: rotate(var(--icon-rotation));" width="{{ size }}" height="{{ size }}" viewBox="0 0 {{ iconCloseSize }} {{ iconCloseSize }}" style="enable-background:new 0 0 {{ iconCloseSize }} {{ iconCloseSize }};" xml:space="preserve"  version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
      <line fill="none" stroke-linecap="round" stroke-linejoin="round" x1="{{ iconCloseOuterPos }}" y1="{{ iconPadding }}" x2="{{ iconPadding }}" y2="{{ iconCloseOuterPos }}"/>
      <line fill="none" stroke-linecap="round" stroke-linejoin="round" x1="{{ iconCloseOuterPos }}" y1="{{ iconCloseOuterPos }}" x2="{{ iconPadding }}" y2="{{ iconPadding }}"/>
    </svg>
  {% elsif iconIcon == 'rocket' %}
