<!-- Shared Headline Row Section -->
{%- assign headlineRowCentered = include.centered -%}
{%- assign headlineRowLevel = include.level | default: "h2" -%}
{%- assign headlineRowText = include.text -%}
{%- assign headlineRowSpacing = include.spacing | default: "space-top-3" -%}
{% capture headlineRowCenteredClass %}{% if headlineRowCentered %}text-center{% endif %}{% endcapture %}

<div class="container {{ headlineRowSpacing }} headline-row">
  <div class="row">
    <div class="col-sm-12 {{ headlineRowCenteredClass }}">
      {%
        include headline.html
        level=headlineRowLevel
        text=headlineRowText
      %}
    </div>
  </div>
</div>
<!-- End Shared Headline Row Section -->
