{%- assign teaserCtaText = include.ctaText -%}
{%- assign teaserCtaHref = include.ctaHref -%}
{%- assign teaserCtaType = include.type -%}
{%- assign teaserCtaLink = include.link -%}
{%- assign teaserCtaTarget = include.target -%}
{%- assign teaserThumb = include.thumb -%}
{%- assign teaserAlt = include.alt -%}
{%- assign teaserId = include.id -%}
{%- assign teaserHeadline = include.headline -%}
{%- assign teaserOverline = include.overline -%}
{%- assign teaserLogo = include.logo -%}
{%- assign teaserLogoAlt = include.logoAlt -%}
{%- assign teaserText = include.text -%}

{% capture teaserVideoId %}video-id__{{ teaserId }}{% endcapture %}
{% capture teaserVideoFrameId %}{{ teaserVideoId }}-frame{% endcapture %}

<!-- Shared Teaser Section -->

<div class="teaser">
  <div class="container">
    <div class="row teaser__row">
      <span class="teaser__overline">{{ teaserOverline }}</span>
      {%
        include headline.html
        text=teaserHeadline
        level="h2"
        classes="teaser__headline"
      %}
      <div class="teaser__thumb js-inline-video-player" data-hs-video-player-options='{
        "videoId": "{{ teaserId }}",
        "parentSelector": "#{{ teaserVideoId }}",
        "targetSelector": "#{{ teaserVideoFrameId }}",
        "isAutoplay": true,
        "classMap": {
          "toggle": "video-player-played"
        }
      }'>
        <div class="teaser__video-frame embed-responsive">
          <div id="{{ teaserVideoFrameId }}"></div>
        </div>
        <span class="teaser__video-play video-player-icon video__player-icon">
          <i class="fas fa-play"></i>
        </span>
        {%
          include img.html
          img=teaserThumb
          cloudinary=true
          alt=teaserAlt
        %}
      </div>

      <div class="teaser__logo">
        {%
          include img.html
          img=teaserLogo
          cloudinary=true
          alt=teaserLogoAlt
        %}
      </div>
      <div class="teaser__text font-size-2">{{ teaserText }}</div>
      <div class="teaser__cta">
        {%
          include cta.html
          text=teaserCtaText
          href=teaserCtaHref
          link=teaserCtaLink
          target=teaserCtaTarget
          type=teaserCtaType
          width="w-100 w-md-auto"
        %}
      </div>
    </div>
  </div>
</div>
<!-- End Shared Teaser Section -->
