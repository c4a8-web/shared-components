{%- assign authorHeaderAuthor = include.author -%}
{%- assign authorHeaderAvatarImgUrl = include.imgUrl -%}
{%- assign authorHeaderAvatarClasses = include.classes -%}
{%- assign authorHeaderPostCount = include.postCount -%}

<author-header
  :author="{{ authorHeaderAuthor | jsonify | escape }}"
  classes="{{ authorHeaderAvatarClasses }}"
  img-url="{{ authorHeaderAvatarImgUrl }}"
  :post-count="{{ authorHeaderPostCount }}"
>
</author-header>
