<!-- Shared Job List Section -->
{% assign jobListClientName = clientName | default: include.clientName %}
{% assign jobListMaxItems = maxItems | default: include.maxItems %}
{% assign jobListDetailUrl = detailUrl | default: include.detailUrl %}
{% assign jobListJobId = jobId | default: include.jobId %}
{% assign jobListTags = tags | default: include.tags %}
{% assign jobListTeam = team | default: include.team %}
{% assign jobListApiUrl = apiUrl | default: include.apiUrl %}
{% assign jobListHeadlineClasses = headlineClasses | default: include.headlineClasses %}
{% assign jobListHeadlineLevel = headlineLevel | default: include.headlineLevel %}
{% assign jobListHeadlineText = headlineText | default: include.headlineText %}
{% assign jobListSublineText = sublineText | default: include.sublineText %}
{% assign jobListExpandText = expandText | default: include.expandText %}

<div class="job-list container"
  data-id="{{ jobListClientName }}"
  data-max-items="{{ jobListMaxItems }}"
  data-detail-url="{{ jobListDetailUrl }}"
  {% if jobListJobId %}data-job-id="{{ jobListJobId }}"{% endif %}
  {% if jobListTags %}data-tags="{{ jobListTags }}"{% endif %}
  {% if jobListTeam %}data-team="{{ jobListTeam }}"{% endif %}
  {% if jobListApiUrl %}data-api-url="{{ jobListApiUrl }}"{% endif %}
>
  <div class="row">
    <div class="job-list__header col-lg-12">
      {%- capture headlineClasses -%}job-list__headline {{ jobListHeadlineClasses }}{%- endcapture -%}
      {%- assign headlineLevel = jobListHeadlineLevel | default: 'h2' -%}

      {%
        include headline.html
        text=jobListHeadlineText
        level=headlineLevel
        classes=headlineClasses
      %}
    </div>
    {%- if jobListSublineText -%}
    <div class="job-list__meta col-lg-7">
      <div class="job-list__subline">{{ jobListSublineText }}</div>
    </div>
    {%- endif -%}
    <div class="col-lg-12">
      <div class="job-list__entries"></div>
      <div class="job-list__expand-button is-invisible">{{ jobListExpandText }}</div>
    </div>
  </div>
</div>
<!-- End Shared Job List Section -->
