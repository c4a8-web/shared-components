<!-- Shared Text Animation Section -->
{%- assign textAnimationSequence = include.sequence -%}
{%- assign textAnimationFirstSequence = textAnimationSequence | first -%}
{%- assign textAnimationFixed = include.fixed -%}

<div class="text-animation {% if textAnimationFixed %}text-animation--fixed{% endif %}" data-sequence='{{ textAnimationSequence | jsonify }}'>
  <div class="text-animation__placeholder">
    <span class="text-animation__text"></span>
    <div class="text-animation__subline"></div>
  </div>
  <div class="text-animation__visible">
    <span class="text-animation__text"></span>
    <div class="text-animation__subline is-invisible"></div>
  </div>
</div>

<!-- End Shared Text Animation Section -->
